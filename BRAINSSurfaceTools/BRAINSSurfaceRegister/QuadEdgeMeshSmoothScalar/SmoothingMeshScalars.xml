<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>
    BRAINS.Surface
  </category>
  <title>
    BRAINS Smooth Scalars
  </title>
  <description>
    This program smoothes scalars of the input surface by lambda and number of iterations.
  </description>
  <version>1.0</version>
  <documentation-url>http://www.nitrc.org/plugins/mwiki/index.php/brains:BRAINSSurfaceRegister</documentation-url>
  <license>https://www.nitrc.org/svn/brains/BuildScripts/trunk/License.txt</license>
  <contributor>Wen Li and Luis Ibanez and Vincent A. Magnotta</contributor>
  <acknowledgements>Funding for this work was provided by NIH/NINDS award NS050568</acknowledgements>

  <parameters>
    <label>Input Parameters</label>

    <file>
      <name>inputSurfaceFile</name>
      <longflag>inputSurfaceFile</longflag>
      <description>Input Surface Filename</description>
      <label>Input Surface</label>
      <channel>input</channel>
    </file>

  </parameters>
    
  <parameters>
      <label>Smoothing Parameters</label>
      
      <double>
          <name>lambda</name>
          <longflag>lambda</longflag>
          <description>The value to control the smoothing effect.</description>
          <label>lambda</label>
          <default>1.0</default>
      </double>
      
      <double>
          <name>iterations</name>
          <longflag>iterations</longflag>
          <description>The number of iterations to do the smoothing</description>
          <label>Number of Iterations</label>
          <default>5</default>
      </double>
      
  </parameters>

  <parameters>
    <label>Output Parameters</label>

    <file>
      <name>outputSurfaceFile</name>
      <longflag>outputSurfaceFile</longflag>
      <description>Output Surface Filename</description>
      <label>Output Surface</label>
      <channel>output</channel>
    </file>

  </parameters>

</executable>
